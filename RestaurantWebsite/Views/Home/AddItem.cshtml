@model MenuItem



<form asp-action="Save" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="address">Description</label>
        <input asp-for="Description" type="text" class="form-control" id="description" placeholder="Enter description">
    </div>
    <div class="form-group">
        <label for="number">Price</label>
        <input asp-for="Price" class="form-control" id="price" placeholder="Enter price">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="AdminPage">Back</a>
</form>
