@model IEnumerable<MenuItem>

<div class="container">

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="EditItem" asp-route-itemId="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-itemId="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="AddItem">Add Dish</a>
    <br />
    <br />
    <a class="btn-primary btn" asp-action="Index">Home</a>

</div>