@model RestaurantWebsite.Models.Cart

<h4>Your Cart</h4>

<table class="table table-dark">
    <tbody>

        @foreach (var item in Model.cartItems)
        {
            <tr>
                <td>@item.Item.Name</td>
                <td>@item.Quantity</td>
                <td>
                    <a asp-controller="Home" asp-action="RemoveCartItem" asp-route-dishId="@item.Item.Id">Remove</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<h5>Total Price: @Model.TotalPrice</h5>
<br />
@if (Model.cartItems.Count > 0)
{
    <a asp-controller="Home" asp-action="ClearCart">Clear Cart</a>
    <br />
    <br />
    <a class="btn btn-primary" asp-controller="Home" asp-action="Checkout">Checkout</a>
}
<br />
<br />